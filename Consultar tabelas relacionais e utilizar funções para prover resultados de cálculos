SELECT LOCALIDADE.CIDADE, Count(FUNCIONARIO.NOME_FUNC) AS CountOfNOME_FUNC, Sum(FUNCIONARIO.SALARIO) AS SumOfSALARIO
FROM DEPTO INNER JOIN (LOCALIDADE RIGHT JOIN FUNCIONARIO ON LOCALIDADE.ID_LOCAL = FUNCIONARIO.ID_LOCAL) ON DEPTO.ID_DEPTO = FUNCIONARIO.ID_DEPTO
GROUP BY LOCALIDADE.CIDADE
HAVING (((LOCALIDADE.CIDADE)<>'são paulo'))
ORDER BY Count(FUNCIONARIO.NOME_FUNC);



SELECT LOCALIDADE.CIDADE, Count(FUNCIONARIO.NOME_FUNC) AS Qtde, Avg(FUNCIONARIO.SALARIO) AS Media, Sum(FUNCIONARIO.SALARIO) AS Total
FROM DEPTO INNER JOIN (LOCALIDADE RIGHT JOIN FUNCIONARIO ON LOCALIDADE.ID_LOCAL = FUNCIONARIO.ID_LOCAL) ON DEPTO.ID_DEPTO = FUNCIONARIO.ID_DEPTO
GROUP BY LOCALIDADE.CIDADE
HAVING (((LOCALIDADE.CIDADE)<>'são paulo'))
ORDER BY Count(FUNCIONARIO.NOME_FUNC);



SELECT LOCALIDADE.CIDADE, Count(FUNCIONARIO.NOME_FUNC) AS Qtde, Avg(FUNCIONARIO.SALARIO) AS Media, Sum(FUNCIONARIO.SALARIO) AS Total
FROM DEPTO INNER JOIN (LOCALIDADE RIGHT JOIN FUNCIONARIO ON LOCALIDADE.ID_LOCAL = FUNCIONARIO.ID_LOCAL) ON DEPTO.ID_DEPTO = FUNCIONARIO.ID_DEPTO
GROUP BY LOCALIDADE.CIDADE
HAVING (((LOCALIDADE.CIDADE)<>'são paulo'))
ORDER BY Count(FUNCIONARIO.NOME_FUNC)
ORDER BY 1;
