
SELECT FUNCIONARIO.NOME_FUNC, DEPTO.DEPARTAMENTO, LOCALIDADE.UF
FROM DEPTO INNER JOIN (LOCALIDADE RIGHT JOIN FUNCIONARIO ON LOCALIDADE.ID_LOCAL= FUNCIONARIO.ID_LOCAL) 
ON DEPTO.ID_DEPTO = FUNCIONARIO.ID_DEPTO
ORDER BY FUNCIONARIO.NOME_FUNC;



SELECT FUNCIONARIO.NOME_FUNC, DEPTO.DEPARTAMENTO, LOCALIDADE.UF
FROM DEPTO INNER JOIN (LOCALIDADE RIGHT JOIN FUNCIONARIO ON LOCALIDADE.ID_LOCAL= FUNCIONARIO.ID_LOCAL) 
ON DEPTO.ID_DEPTO = FUNCIONARIO.ID_DEPTO
WHERE LOCALIDADE.UF)="SP"
ORDER BY FUNCIONARIO.NOME_FUNC;
