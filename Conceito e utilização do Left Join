SELECT *
FROM LOCALIDADE
LEFT JOIN FUNCIONARIO 
ON LOCALIDADE.ID_LOCAL = FUNCIONARIO.ID_LOCAL

SELECT FUNCIONARIO.NOME_FUNC, LOCALIDADE.CIDADE
FROM LOCALIDADE 
LEFT JOIN FUNCIONARIO ON LOCALIDADE.ID_LOCAL = FUNCIONARIO.ID_LOCAL;

SELECT FUNCIONARIO.NOME_FUNC, LOCALIDADE.CIDADE
FROM LOCALIDADE 
LEFT JOIN FUNCIONARIO ON LOCALIDADE.ID_LOCAL = FUNCIONARIO.ID_LOCAL
ORDER BY FUNCIONARIO.NOME_FUNC; 
