
SELECT FUNCIONARIO.NOME_FUNC, LOCALIDADE.CIDADE, LOCALIDADE.UF
FROM LOCALIDADE RIGHT JOIN FUNCIONARIO ON LOCALIDADE.ID_LOCAL = FUNCIONARIO.ID_LOCAL
WHERE LOCALIDADE.UF="SP";


SELECT FUNCIONARIO.NOME_FUNC, LOCALIDADE.CIDADE, LOCALIDADE.UF
FROM LOCALIDADE RIGHT JOIN FUNCIONARIO ON LOCALIDADE.ID_LOCAL = FUNCIONARIO.ID_LOCAL
WHERE LOCALIDADE.UF='SP' OR LOCALIDADE.UF='RJ';


SELECT FUNCIONARIO.NOME_FUNC, LOCALIDADE.CIDADE, LOCALIDADE.UF
FROM LOCALIDADE RIGHT JOIN FUNCIONARIO ON LOCALIDADE.ID_LOCAL = FUNCIONARIO.ID_LOCAL
WHERE LOCALIDADE.UF <> 'S√ÉO PAULO';
