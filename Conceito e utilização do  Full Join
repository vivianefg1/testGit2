
SELECT *
FROM LOCALIDADE
FULL JOIN FUNCIONARIO 
ON LOCALIDADE.ID_LOCAL = FUNCIONARIO.ID_LOCAL

SELECT FUNCIONARIO.NOME_FUNC, LOCALIDADE.CIDADE
FROM LOCALIDADE 
FULL JOIN FUNCIONARIO ON LOCALIDADE.ID_LOCAL = FUNCIONARIO.ID_LOCAL;

SELECT FUNCIONARIO.NOME_FUNC, LOCALIDADE.CIDADE
FROM LOCALIDADE 
FULL JOIN FUNCIONARIO ON LOCALIDADE.ID_LOCAL = FUNCIONARIO.ID_LOCAL
ORDER BY FUNCIONARIO.NOME_FUNC; 
